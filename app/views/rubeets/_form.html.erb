<%= form_with(model: @rubeet,local:true,url:choose_new_or_edit) do |form|%>
  <% if @rubeet.errors.any? %>
  <div id="error_explanation">
    <h2><%= @rubeet.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @rubeet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>	
  <div class="main_content">
    <%= form.text_area :content,class:"text_area" %>
    <%= form.submit :つぶやく, class:"button" %>
  </div>
<% end %>
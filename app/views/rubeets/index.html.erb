<h1>つぶやき一覧</h1>
<% @rubeets.each do |rubeet| %>
	<tr>
		<p>
			<td><%= rubeet.content %></td>
			<td><%= link_to "つぶやきを編集する",edit_rubeet_path(rubeet.id) %></td>
			<td><%= link_to"つぶやきを削除する",rubeet_path(rubeet.id),method: :delete ,data:{confirm:"本当に削除してもよろしいですか？"}%></td>
		</p>
	</tr>
	<% end %>
</table>
<%= link_to '新しくつぶやく',new_rubeet_path %> 

